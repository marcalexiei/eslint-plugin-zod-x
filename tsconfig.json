{
  "exclude": ["dist"],
  "compilerOptions": {
    // https://www.typescriptlang.org/tsconfig/

    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,

    // Modules
    "module": "NodeNext",
    "target": "ES6",

    // Emit
    "removeComments": true,

    // Language and Environment
    "moduleResolution": "NodeNext",

    // Interop Constraints
    "verbatimModuleSyntax": true
  }
}
